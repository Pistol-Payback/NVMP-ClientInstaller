<Window x:Class="ClientInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientInstaller"
        mc:Ignorable="d"
        Title="NV:MP - Installer Wizard"
        Height="519" Width="800"
        Background="#FF181818"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="nvmp-logo-32x32.png">

    <Grid>
        <!-- Left side background -->
        <Image x:Name="Res_a_png"
           Source="Res/a.png"
           Stretch="Fill"
           HorizontalAlignment="Left"
           Width="714"
           ClipToBounds="True"/>

        <!-- Right panel -->
        <Border BorderBrush="Black"
            BorderThickness="1"
            Margin="264,0,0,0"
            Background="#FF181818">
            <Grid>
                <!-- Layout rows: header, intro, path picker, details, button -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 1) Header -->
                <Label Grid.Row="0"
               Content="Installation Wizard"
               Margin="32,16,32,8"
               Foreground="White"
               FontSize="24"
               VerticalAlignment="Center"/>

                <!-- 2) Intro paragraph -->
                <TextBox Grid.Row="1"
                 Margin="32,0,32,8"
                 TextWrapping="Wrap"
                 Background="Transparent"
                 Foreground="White"
                 BorderThickness="0"
                 FontSize="16"
                 IsReadOnly="True"
                 Text="You are about to install New Vegas: Multiplayer onto your system. This is a community made mod which is not affiliated or endorsed by Bethesda Softworks or Obsidian Entertainment.&#x0a;&#x0a;Please link the file path to the 'Fallout New Vegas' root directory, and read NV:MP's terms of service before continuing the installation.&#x0a;"/>

                <!-- 3) Found File Path picker -->
                <Grid Grid.Row="2"
              Margin="32,0,32,8"
              VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                 Content="File Path:"
                 Foreground="White"
                 VerticalAlignment="Center"/>

                    <TextBox Grid.Column="1"
                   x:Name="FoundFilePathTextBox"
                   Height="25"
                   Margin="8,0"
                   IsReadOnly="True"
                   Background="#FF282828"
                   Foreground="White"
                   BorderBrush="Gray"
                   BorderThickness="1"
                   Padding="4"/>

                    <Button Grid.Column="2"
                  x:Name="btnBrowse"
                  Content="⋯"
                  Width="30"
                  Height="25"
                  Margin="4,0,0,0"
                  Background="#FF282828"
                  Foreground="White"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  Click="OpenSearchWindow_Click"/>
                </Grid>

