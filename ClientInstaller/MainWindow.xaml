                <Button Grid.Row="4"
                Content="Accept &amp; Install"
                Width="120" Height="37"
                Margin="0,8,32,16"
                HorizontalAlignment="Right"
                Click="OnInstallClick"/>
            </Grid>
        </Border>

        <!-- Bottom-left NV:MP logo -->
        <Image x:Name="Res_nvmp_sex_png"
           Source="Res/nvmp-sex.png"
           HorizontalAlignment="Left"
           Margin="19,34,0,0"
           Width="212.333"
           Height="55"
           VerticalAlignment="Top"/>
    </Grid>
</Window>
